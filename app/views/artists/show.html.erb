<h3 style="display: inline-block; 
            padding-right: 10px; 
            padding-bottom: 0px; 
            margin-bottom: 0px; ">
    <%= @artist.name %>, <%= @artist.age %>
</h3>
<%= link_to edit_artist_path(@artist) do %>
    <i class="fas fa-edit"></i>
<% end %>

<p>
    <%= @artist.desc %>
</p>

<h5 style="display: inline-block; 
            padding-right: 10px; 
            padding-bottom: 0px;">
    Works by <%= @artist.name %>
</h5>
<% if @artist.mangas.length <= 0 %>
    <p>There are no works.</p>
<% end %>
<div class="grid">
    <% @artist.mangas.each do |manga| %>
        <div>
            <img src="<%= manga.img_path %>" />
            <%= link_to manga_path(manga) do %>
                <h6><%= manga.title %></h6>
            <% end %>
        </div>
    <% end %>
</div>